<h1>Time Log</h1>

<form action="/log" method="post">
  <fieldset>
    <h1>Add Entry:</h1>
    <fieldset>
      <label for="date">Date</label>
      <input type="date" id="date" name="date" />
    </fieldset>
    <fieldset>
      <label for="course">Course</label>
      <input type="text" id="course" name="course" />
    </fieldset>
    <fieldset>
      <label for="lesson">Lesson</label>
      <input type="text" id="lesson" name="lesson" />
    </fieldset>
    <fieldset>
      <label for="hours">Hours</label>
      <input type="number" id="hours" name="hours" min="0" max="24" />
    </fieldset>
    <fieldset>
      <label for="minutes">Minutes</label>
      <input type="number" id="minutes" name="minutes" min="0" max="59" />
    </fieldset>
    <fieldset>
      <label for="notes">Notes</label>
      <input type="text" id="notes" name="notes" />
    </fieldset>
    <fieldset>
      <input type="submit" value="Enter" />
    </fieldset>
  </fieldset>
</form>

<table class="full-width large-text">
  <thead>
    <tr>
      <th>Date</th>
      <th>Course</th>
      <th>Lesson</th>
      <th>Hours</th>
      <th>Notes</th>
    </tr>
  </thead>
  <tbody>
    <% @log.each do |entry| %>
      <tr>
        <td><%= entry[:day] %></td>
        <td><%= entry[:course_id] %></td>
        <td><%= entry[:lesson] %></td>
        <td><%= entry[:hours] %></td>
        <td><%= entry[:notes] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<nav>
  <a href="?page=<%= previous_page %>">Previous</a>
  This is page <%= @page %>.
  <a href="?page=<%= next_page %>">Next</a>
</nav>
